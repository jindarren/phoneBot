doctype html
html(lang='en-us')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    link(rel="stylesheet" type = "text/css", href = "../jquery-ui/themes/base/jquery-ui.min.css")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(href='https://cdn.bootcss.com/twitter-bootstrap/3.4.0/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='../bootstrap-star-rating/css/star-rating.min.css')
    link(rel='stylesheet', href='css/style.css')
  body        
    #container
      .context
        #likedphones
            h5.intro Task: Find 5 phones you want to put in your shopping cart.
            ul.list-group
        #task1(style="display:none") You have finished the task, please fill the final questionnaire.

        br
        button.btn.btn-info#questionnaire-1(style="display:none") Please fill the final questionnaire :)
        br
        button#start-task.btn.btn-primary Start study

      .iphone-x
        .loading
        .window(style="display:none")
          .chat
        input#message(type='text', name='message', value='', placeholder="Chat with me!", style="display:none")
      .task
        #accordion
          h3 Tips for tuning the recommendations by phone features
          div
            p.desc
              span.emphtext By brand:
            p.example "I like the iPhone."
            p.example "I want to buy a Huawei mobile phone."
            br

            p.desc
              span.emphtext By price:
            p.example "I want to buy a cheaper price phone."
            p.example "The price can be higher."
            br

            p.desc
              span.emphtext By resolution:
            p.example "I need a phone having better display."
            p.example "I want a phone having higher resolution."
            br

            p.desc
              span.emphtext By storage:
            p.example "I need a phone with a large storage."
            p.example "I need a phone having more space for saving my photos."
            br

            p.desc
              span.emphtext By computing performance:
            p.example "I want to buy a phone having larger RAM."
            p.example "I want to buy a phone having better GPU."
            p.example "I want to buy a phone running applications faster."
            br

            p.desc
              span.emphtext By operating system:
            p.example "I want to buy an Android phone."
            p.example "I like the ios system."
            br

            p.desc
              span.emphtext By size:
            p.example "I like a light weight phone"
            p.example "I want to buy a phone with a slim body"

    script(type = "text/javascript", src = "../jquery/dist/jquery.min.js", charset = 'utf-8')
    script(type = "text/javascript", src = "../jquery.cookie/jquery.cookie.js", charset = 'utf-8')
    script(type = "text/javascript", src = "../jquery-ui/jquery-ui.min.js", charset = 'utf-8')
    script(type = "text/javascript", src = "js/popper.min.js", charset = 'utf-8')
    script(src='/socket.io/socket.io.js')
